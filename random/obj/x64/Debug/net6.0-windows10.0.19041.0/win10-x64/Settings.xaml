<Page x:ConnectionId='1'
    x:Class="randomtest.Settings"
    x:Name="SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:randomtest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="transparent"
                        >

    <Grid>

        <TextBlock x:ConnectionId='2' x:Name="randomSho" 
            FontSize="30" 
            Margin="40,14,10,20"
            Text="设置" />
        <Grid Margin="0,-961,0,100"
          Width="640" 
          Height="60" 
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          CornerRadius="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="580" />
            </Grid.ColumnDefinitions>
            <FontIcon x:ConnectionId='7' Margin="27,0,0,0" Grid.Column="0" x:Name="ChangeIcon" FontFamily="Segoe MDL2 Assets" Glyph="&#xE72C;" FontSize="20"/>
            <TextBlock x:ConnectionId='8' x:Name="Elenment0" 
               Grid.Column="1" 
               FontSize="15" 
               Margin="25,0,0,0"
               VerticalAlignment="Center"
               Text="重复选取"/>
            <!-- 新建一个开关 -->
            <ToggleSwitch x:ConnectionId='9' x:Name="MyToggleSwitch"  
              Grid.Column="2"  
              IsOn="False" 
                                              
              VerticalAlignment="Center"
              Margin="0,0,0,0"
              OffContent="" OnContent=""
              HorizontalAlignment="Right">
                <ToggleSwitch.Resources>
                    <x:Double x:Key="ToggleSwitchPreContentMargin">0</x:Double>
                    <x:Double x:Key="ToggleSwitchPostContentMargin">0</x:Double>
                </ToggleSwitch.Resources>
            </ToggleSwitch>
        </Grid>

        <Grid Margin="0,70,0,1000"
          Width="640" 
          Height="60" 
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          CornerRadius="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <FontIcon x:ConnectionId='4' Margin="27,0,0,0" Grid.Column="0" x:Name="StartButtonIcon" FontFamily="Segoe MDL2 Assets" Glyph="&#xE790;" FontSize="20"/>
            <TextBlock x:ConnectionId='5' x:Name="Elenment1" 
               Grid.Column="1" 
               FontSize="15" 
               Margin="25,0,0,0"
               VerticalAlignment="Center"
               Text="主题"/>
            <ComboBox x:ConnectionId='6' x:Name="ThemeComboBox"  
              Grid.Column="2"  
                                                                
              Margin="400,0,10,0" 
              VerticalAlignment="Center">
                <ComboBoxItem Content="跟随系统" />
                <ComboBoxItem Content="黑色主题" />
                <ComboBoxItem Content="白色主题" />
            </ComboBox>
        </Grid>
        <Grid Margin="0,200,0,1000"
          Width="640" 
          Height="60" 
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          CornerRadius="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Width="30" Height="30" Margin="22,0,0,0" CornerRadius="5">
                <Border.Background>
                    <ImageBrush ImageSource="Assets\advator.jpg" />
                </Border.Background>
            </Border>
            <HyperlinkButton x:ConnectionId='3' x:Name="Tiaozhuan" 
               Grid.Column="1" 
               FontSize="15" 
               FontWeight="Bold"
               Margin="10,0,0,0"
               VerticalAlignment="Center"
               NavigateUri="https://www.Genkaim.top"
               Content="Genkaim"/>
        </Grid>
    </Grid>
</Page>

